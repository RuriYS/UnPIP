{
    "name": "Un-PIP for Facebook",
    "description": "Automatically closes Facebook's stupid picture in picture feature for videos.",
    "version": "1.0",
    "manifest_version": 3,
    "content_scripts": [{
        "matches": ["*://*.facebook.com/*"],
        "js": ["scripts/content.js"]
    }],
    "action": {
        "default_icon": "icons/icon64.png"
    },
    "icons": {
        "32": "icons/icon32.png",
        "64": "icons/icon64.png",
        "128": "icons/icon128.png",
        "256": "icons/icon256.png"
    }
}